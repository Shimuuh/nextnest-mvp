# ============================================================
# .env — Environment Variables for HopeLink AI Engine
# Copy this file, rename it to .env, and fill in your values.
# NEVER commit the real .env file to Git.
# Add .env to your .gitignore immediately.
# ============================================================

# ------------------------------------------------------------
# LLM CONFIGURATION
# Set provider to "groq", "anthropic", "openai", or "fallback"
# "groq"     = FREE and recommended — start here
# "fallback" = no API key needed (keyword matching only)
# ------------------------------------------------------------
LLM_PROVIDER=groq

# ✅ GROQ (FREE — Recommended)
# Get your free key at: console.groq.com → API Keys
GROQ_API_KEY=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
GROQ_MODEL=llama-3.3-70b-versatile
# llama-3.3-70b-versatile  → best reasoning  (recommended)
# llama-3.1-8b-instant     → fastest option

# Uncomment and fill in if you switch to Anthropic:
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# Uncomment and fill in if you switch to OpenAI:
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-your-key-here
# OPENAI_MODEL=gpt-4o-mini

LLM_MAX_TOKENS=500

# ------------------------------------------------------------
# BACKEND API (Node.js)
# The AI engine calls your Node.js backend to read/write data
# ------------------------------------------------------------
BACKEND_API_URL=http://localhost:3000/api
BACKEND_API_SECRET=dev-secret-change-in-production
BACKEND_TIMEOUT=10

# ------------------------------------------------------------
# SAFETY LIMITS
# ------------------------------------------------------------
MAX_DONATION_AMOUNT=50000
MAX_ALLOCATION_COUNT=10
ALWAYS_CONFIRM_ABOVE=1000

# ------------------------------------------------------------
# SERVER
# ------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ------------------------------------------------------------
# MEMORY
# ------------------------------------------------------------
MAX_MEMORY_MESSAGES=10
SESSION_TTL=3600

# ------------------------------------------------------------
# WORKFLOW SETTINGS
# ------------------------------------------------------------
EDUCATION_MAX_RESULTS=5
EMERGENCY_URGENCY_THRESHOLD=0.7
SUPPLY_MAX_ORPHANAGES=3
SPONSORSHIP_MIN_AMOUNT=500
